    "extends": "tslint:latest",
    "rulesDirectory": "./src",
    "rules": {
        /*
         * Any rules specified here will override those from the base config we are extending.
         */
        "ordered-imports": "any",
        "prefer-const": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "max-classes-per-file": [
            true,
            5
        ],
        "indent": [
            true,
            "spaces"
        ],
        "member-access": false,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "quotemark": [
            true,
            "single"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-sort-keys": false,
        "no-unused-expression": false
    },
    "jsRules": {
        /*
